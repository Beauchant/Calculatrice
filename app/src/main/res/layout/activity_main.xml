<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/tv_border"
        android:hint="0"
        android:maxLength="15"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn1"
        style="@style/CalculatorButtonStyle"
        android:text="1"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        style="@style/CalculatorButtonStyle"
        android:text="2"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        app:layout_constraintStart_toEndOf="@id/btn1" />

    <Button
        android:id="@+id/btn3"
        style="@style/CalculatorButtonStyle"
        android:text="3"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        app:layout_constraintStart_toEndOf="@id/btn2" />

    <!-- Add similar constraints for other buttons -->

    <Button
        android:id="@+id/btnPlus"
        style="@style/CalculatorButtonStyle"
        android:text="+"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        app:layout_constraintStart_toEndOf="@id/btn3" />

    <Button
        android:id="@+id/btn4"
        style="@style/CalculatorButtonStyle"
        android:text="4"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        style="@style/CalculatorButtonStyle"
        android:text="5"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintStart_toEndOf="@id/btn4" />

    <Button
        android:id="@+id/btn6"
        style="@style/CalculatorButtonStyle"
        android:text="6"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn5" />

    <!-- Add similar constraints for other buttons -->

    <Button
        android:id="@+id/btnMinus"
        style="@style/CalculatorButtonStyle"
        android:text="-"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"
        app:layout_constraintStart_toEndOf="@id/btn6" />

    <Button
        android:id="@+id/btn7"
        style="@style/CalculatorButtonStyle"
        android:text="7"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn8"
        style="@style/CalculatorButtonStyle"
        android:text="8"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn7" />

    <Button
        android:id="@+id/btn9"
        style="@style/CalculatorButtonStyle"
        android:text="9"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn8" />

    <!-- Add similar constraints for other buttons -->

    <Button
        android:id="@+id/btnProd"
        style="@style/CalculatorButtonStyle"
        android:text="*"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btnMinus"
        app:layout_constraintStart_toEndOf="@id/btn9" />

    <Button
        android:id="@+id/btn0"
        style="@style/CalculatorButtonStyle"
        android:text="0"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDot"
        style="@style/CalculatorButtonStyle"
        android:text="."
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@id/btn0" />

    <Button
        android:id="@+id/btnC"
        style="@style/CalculatorButtonStyle"
        android:text="C"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btnDot" />

    <Button
        android:id="@+id/btnDiv"
        style="@style/CalculatorButtonStyle"
        android:text="/"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_border"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/btnProd"
        app:layout_constraintStart_toEndOf="@id/btnC" />

    <Button
        android:id="@+id/btnEqual"
        style="@style/CalculatorButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_border"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn0" />


</androidx.constraintlayout.widget.ConstraintLayout>
